
{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests": ["../__tests__"],
      "@/tests/*": ["../__tests__/*"]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": []
}